<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Filters Section - Collapsible -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp">

            <!-- Filter Header - Always visible -->
            <LinearLayout
                android:id="@+id/filterHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="סינון אימונים"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/expandCollapseIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:contentDescription="הרחב/כווץ" />

            </LinearLayout>

            <!-- Filters Content - Collapsible -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/filtersScrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="gone"
                android:fillViewport="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:paddingTop="0dp">

                <!-- Teams filter -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="קבוצות:"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectAllTeams"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="סמן/בטל הכל"
                        android:textSize="11sp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchViewTeams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:queryHint="חפש קבוצה..."
                    android:iconifiedByDefault="false"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupTeams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:singleSelection="false" />

                <!-- Courts filter -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="מגרשים:"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectAllCourts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="סמן/בטל הכל"
                        android:textSize="11sp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchViewCourts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:queryHint="חפש מגרש..."
                    android:iconifiedByDefault="false"
                    android:layout_marginBottom="4dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupCourts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:singleSelection="false" />

                <!-- Time filters -->
                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipHidePast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="הסתר אימונים עבר"
                        android:checkable="true"
                        android:checked="true"
                        style="@style/Widget.MaterialComponents.Chip.Filter" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipThisWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="השבוע בלבד"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Filter" />

                </com.google.android.material.chip.ChipGroup>

                <!-- Months filter -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="חודשים:"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectAllMonths"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="סמן/בטל הכל"
                        android:textSize="11sp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupMonths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:singleSelection="false" />

                <!-- Days filter -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="2dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ימים:"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectAllDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="סמן/בטל הכל"
                        android:textSize="11sp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="false" />

                <!-- Sort Options -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp"
                    android:background="@android:color/darker_gray"
                    android:elevation="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="מיון:"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:paddingStart="8dp"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupSort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSortByTeam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="לפי קבוצה"
                            android:checkable="true"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSortByTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="לפי זמן התחלה"
                            android:checkable="true"
                            android:checked="true"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/scheduleRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"
        app:tint="@android:color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
